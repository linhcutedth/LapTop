@model LapTop.Models.Customer

@{
    ViewData["Title"] = "Details";
    var customer = ViewData["Customer"] as Customer;
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet">

<!-- Card Body -->
<div class="card-body">

    <h1 style="text-align: center; color: coral;">Thông tin khách hàng</h1>
    <hr />
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Mã khách hàng:
            </dt>
            <dd class="col-sm-10">
                @customer.MaKH
            </dd>
            <dt class="col-sm-2">
                Tên đăng nhập
            </dt>
            <dd class="col-sm-10">

                @customer.TenDN
            </dd>
            <dt class="col-sm-2">
                Tên khách hàng:
            </dt>
            <dd class="col-sm-10">
                @customer.TenKH
            </dd>
            <dt class="col-sm-2">
                Số điện thoại:
            </dt>
            <dd class="col-sm-10">
                @customer.SoDT
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @customer.Email
            </dd>
            <dt class="col-sm-2">
                Giới tính:
            </dt>
            <dd class="col-sm-10">
                @customer.GTinh
            </dd>
        </dl>
    </div>
    <br />
    <div>
        @Html.ActionLink("Cập nhật", "Edit", new { makh = @customer.MaKH }) |
        <a asp-action="Index">Trở về</a>
    </div>
</div>