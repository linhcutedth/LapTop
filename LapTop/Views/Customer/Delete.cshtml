@model LapTop.Models.Customer

@{
    ViewData["Title"] = "Delete";
    var customer = ViewData["Customer"] as Customer;
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Xóa khách hàng</h1>

<h3>Bạn chắc chắn muốn xóa khách hàng này?</h3>
<div>
    <h4>Customer</h4>
    <h1>Details</h1>
    <div>
        <h4>Customer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Mã khách hàng:
            </dt>
            <dd class="col-sm-10">
                @customer.MaKH
            </dd>
            <dt class="col-sm-2">
                Tên đăng nhập
            </dt>
            <dd class="col-sm-10">

                @customer.TenDN
            </dd>
            <dt class="col-sm-2">
                Tên khách hàng:
            </dt>
            <dd class="col-sm-10">
                @customer.TenKH
            </dd>
            <dt class="col-sm-2">
                Số điện thoại:
            </dt>
            <dd class="col-sm-10">
                @customer.SoDT
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @customer.Email
            </dd>
            <dt class="col-sm-2">
                Giới tính:
            </dt>
            <dd class="col-sm-10">
                @customer.GTinh
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
